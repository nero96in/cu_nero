<main class="main container">
  <div class="main__upper row pb-3 mb-3">
    <div id="carouselExampleIndicators" class="main__banner carousel slide col-9" data-ride="carousel">
      <ol class="carousel-indicators">
        <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
      </ol>
      <div class="carousel-inner h-100">
        <div class="carousel-item h-100 active">
          <img class="d-block img-fluid w-100 h-100" src="<%=asset_path 'sample_image.png'%>" alt="First slide">
        </div>
        <div class="carousel-item h-100">
          <img class="d-block img-fluid w-100 h-100" src="<%=asset_path 'sample_image.png'%>" alt="Second slide">
        </div>
        <div class="carousel-item h-100">
          <img class="d-block img-fluid w-100 h-100" src="<%=asset_path 'sample_image.png'%>" alt="Third slide">
        </div>
      </div>
      <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
      </a>
      <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
      </a>
    </div>
    <div class="col-3 main__poster">
      <div class="d-flex justify-content-between align-items-end">
        <h3 class="main__poster_info"><i class="fa fa-history" aria-hidden="true"></i> 요즘행사</h3>
        <i class="fa fa-plus pr-2" aria-hidden="true"></i>
      </div>
      <hr class="mb-2 mt-2">
      <img class="main__poster_image d-block w-100 h-auto" src="<%=asset_path 'sample_poster.png'%>">
    </div>
  </div>
  
  <div class="row">
    <div class="col-4 main__section">
      <div class="section__title d-flex justify-content-between align-items-center">
        <div class="btn btn-success">공지사항</div>
        <%= link_to posts_path, class: "main__section_link" do %>
            <i class="fa fa-plus pr-2 text-align-end" aria-hidden="true"></i>
        <% end %>
      </div>
      <ul>
        <% @posts.order("created_at DESC").limit(5).each do |recent_post| %>
          <li class="py-1">
            <% if recent_post.title == "" %>
              <%= link_to "제목 없음", post_path(recent_post.id), class: "main__section_link" %>
            <% else %>
              <%= link_to recent_post.title, post_path(recent_post.id), class: "main__section_link" %>
            <% end %>
          </li>
        <% end %>
      </ul>
    </div>
    <div class="col-3 main__section">
      <div class="section__title d-flex justify-content-between align-items-center">
        <div class="btn btn-success">자료실</div>
        <%= link_to documents_path, class: "main__section_link" do %>
            <i class="fa fa-plus pr-2 text-align-end" aria-hidden="true"></i>
        <% end %>
      </div>
      <ul>
        <% @documents.order("created_at DESC").limit(5).each do |recent_document| %>
          <li class="py-1">
            <% if recent_document.title == "" %>
              <%= link_to "제목 없음", document_path(recent_document.id), class: "main__section_link" %>
            <% else %>
              <%= link_to recent_document.title, document_path(recent_document.id), class: "main__section_link" %>
            <% end %>
          </li>
        <% end %>
      </ul>
    </div>
    <div class="col-5 main__section">
      <div class="section__title d-flex justify-content-between align-items-center">
        <div class="btn btn-success">동아리앨범</div>
        <i class="fa fa-plus pr-2 text-align-end" aria-hidden="true"></i>
      </div>
    </div>
  </div>
</main>






