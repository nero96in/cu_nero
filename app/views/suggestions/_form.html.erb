<%= form_for(@suggestion) do |f| %>
  <% if @suggestion.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@suggestion.errors.count, "error") %> prohibited this suggestion from being saved:</h2>

      <ul>
      <% @suggestion.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="container">
    <div class="field form-group">
      <%= f.label :title, value: "제목" %><br>
      <%= f.text_field :title, class: "form-control" %>
    </div>
    <div class="field form-group">
      <%= f.label :content, value: "내용" %><br>
      <%= f.text_area :content, :class => "tinymce form-control", :rows => 20, :cols => 120 %>
      <%= tinymce %>
    </div>
    <div class="field form-group">
      <%= f.label :avatars, class: "d-none" %>
      <%= f.file_field :avatars, multiple: true %>
    </div>
    <div class="actions">
      <%= f.submit class: "btn btn-primary" %>
    </div>
  </div>
<% end %>

