<div class="container devise__card">
  <div class="card devise-bs">
    <div class="card-header">
      <h5 class="m-0"><%= t('.resend_confirmation_instructions', default: 'Resend confirmation instructions') %></h5>
    </div>
    <div class="card-body">
      <%= form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: { method: :post, role: 'form' }) do |f| %>
        <div class="form-group">
          <div class="d-flex justify-content-between">
            <%= f.label :email %>
            <% resource.errors.each do |field, msg| %>
              <% if field == :email %>
                <p class="text-danger"><%= msg %></p>
              <% end %>
            <% end %>
          </div>
          <%= f.email_field :email, autofocus: true, class: "form-control"  %>
        </div>
  
        <%= f.submit t('.resend_confirmation_instructions', default: 'Resend confirmation instructions'), class: 'btn btn-primary' %>
      <% end %>
      <hr>
      <%= render 'devise/shared/links' %>
    </div>
  </div>
</div>


